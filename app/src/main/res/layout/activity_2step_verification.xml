<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Security beyond your password"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="70dp"></TextView>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:src="@drawable/securitypic"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    />


    <TextView
        android:id="@+id/securitytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To keep your account more secure, we'll ask you for your password and a verification code at sign-in."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="40dp"></TextView>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="set up now"
        android:textSize="20sp"
        android:id="@+id/setupnow"
        android:background="#1F3A93"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        ></Button>


</androidx.appcompat.widget.LinearLayoutCompat>