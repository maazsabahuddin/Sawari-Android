<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/back_saved_places_button"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/blue_back_icon"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="15"
                android:text="Saved Places"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/home"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/add_home_saved_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="15"
                android:text="Home"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:typeface="monospace" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/work"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/add_work_saved_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:text="Work"
                android:layout_marginEnd="15dp"
                android:textSize="16sp"
                android:typeface="monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_weight="15"/>

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/pickupinblue"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/add_saved_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:text="Add Saved Place"
                android:layout_marginEnd="15dp"
                android:textSize="16sp"
                android:typeface="monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_weight="15"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>