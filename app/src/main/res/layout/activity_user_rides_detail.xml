        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/space24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9" />

            <TextView
                android:id="@+id/tv_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:text="Booking ID"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/booking_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:fontFamily="serif"
                android:gravity="end|center_vertical"
                android:maxLength="65"
                android:text="0000532020"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/space12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/space30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/bus_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="Bus Details"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/vehicle_no_plate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:fontFamily="serif"
                android:gravity="end|center_vertical"
                android:maxLength="65"
                android:text="JF-1256 SILVER"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/space29"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/space11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/fareandseats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
