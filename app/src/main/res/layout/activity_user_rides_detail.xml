                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fare_per_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:fontFamily="serif"
                android:gravity="end|center_vertical"
                android:maxLength="65"
                android:text="50 x 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/space10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/space15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

<!--            <TextView-->
<!--                android:id="@+id/return_trip_icon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_weight="1" />-->

            <ImageView
                android:id="@+id/return_trip_icon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pick_up_icon"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/return_trip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="19"
                android:text="Book a return trip"
                android:textSize="16sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/space36"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

<!--            <TextView-->
<!--                android:id="@+id/invoice_icon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_weight="1" />-->

            <ImageView
                android:id="@+id/invoice_icon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/invoice_icon"
                android:layout_marginEnd="2dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/invoice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="26"
                android:text="Invoice"
                android:textSize="16sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background_drawable"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5" >

                <ImageView
                    android:id="@+id/find_stop_icon"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/stop" />

                <TextView
                    android:id="@+id/find_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:text="Find Stop"
                    android:textSize="13sp"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5" >

                <ImageView
                    android:id="@+id/share_ride_icon"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/share_icon"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/share_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:text="Share"
                    android:textSize="13sp"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5" >

                <ImageView
                    android:id="@+id/cancel_ride_icon"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/cancel_icon"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/cancel_ride_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:text="Cancel Ride"
                    android:textSize="13sp"
                    android:typeface="serif"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

