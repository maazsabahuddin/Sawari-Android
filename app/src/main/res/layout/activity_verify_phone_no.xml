<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the 4 digit code sent to you at"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="+923442713545"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

            <EditText
                android:id="@+id/otp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

            <EditText
                android:id="@+id/otp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:maxLength="1"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="0"
                android:inputType="number"
                android:backgroundTint="#1F3A93" />

        </LinearLayout>


        <TextView
            android:id="@+id/otp_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="OTP not matched"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#DC1324"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Resend Code"
            android:id="@+id/resendotp"
            android:textColor="@color/colorJacksonPurple"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:enabled="false"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>

