<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="380dp"
    android:layout_height="150dp"
    app:cardCornerRadius="10dp"
    android:background="@color/colorEdwardGrey"
    android:hapticFeedbackEnabled="true"
    app:cardElevation="6dp"
    app:cardMaxElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="404dp"
        android:layout_height="match_parent"
        android:background="@color/colorEdwardGrey">

        <ImageView
            android:id="@+id/iv_bus"
            android:layout_width="111dp"
            android:layout_height="101dp"
            android:background="@mipmap/ic_bus1"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.673" />

        <TextView
            android:id="@+id/tv_ride_date"
            android:layout_width="60dp"
            android:layout_height="13dp"
            android:text="2019-12-25"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.576" />

        <TextView
            android:id="@+id/tv_pickup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="11:30 AM"
            android:textColor="@color/colorOldBrickRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.453" />

        <TextView
            android:id="@+id/tv_route_id"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="JC-121"
            android:textAlignment="center"
            android:textColor="#96281B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="238dp"
            android:layout_height="150dp"
            android:background="@color/colorEdwardGrey"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TextView
                android:id="@+id/tv_pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:maxLength="65"
                android:text="Pick up: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pickup_location_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:maxLength="65"
                android:text="1 minute from your location"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#E97E7676"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TextView
                android:id="@+id/tv_dropoff_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:maxLength="65"
                android:text="Drop off:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_dropoff_location_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1 min to Bahria University"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#E97E7676"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TextView
                android:id="@+id/tv_seats_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Seats left:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="13sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
