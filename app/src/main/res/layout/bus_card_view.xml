<?xml version="1.0" encoding="utf-8"?>



    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:hapticFeedbackEnabled="true"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bus"
                android:layout_width="105dp"
                android:layout_height="97dp"
                android:background="@mipmap/ic_bus1"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.509" />

            <LinearLayout
                android:layout_width="233dp"
                android:layout_height="146dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tv_pickup_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Pick up: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_pickup_location_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="1 minute from your location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#E97E7676"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <TextView
                    android:id="@+id/tv_dropoff_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Drop off:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_dropoff_location_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="1 min to Bahria University"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#E97E7676"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <TextView
                    android:id="@+id/tv_seats_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Seats left:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pickup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="11:30 AM"
                android:textColor="@color/colorOldBrickRed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.121"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.376" />

            <TextView
                android:id="@+id/tv_ride_date"
                android:layout_width="60dp"
                android:layout_height="13dp"
                android:text="2019-12-25"
                android:textAlignment="center"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.503" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
