<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomRelative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <fragment
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="example.com.mapexample.MapsActivity" />

        <FrameLayout
            android:id="@+id/spinner_frameHF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="@color/ShadeBlack"
            android:backgroundTintMode="src_over">

            <ProgressBar
                android:id="@+id/progressBarHF"
                style="?android:attr/progressBarStyleLarge"
                android:theme="@style/PurpleAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:background="#f0efef"
        android:alpha="0.8">
        #ede9e8
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:foregroundGravity="center"
            app:cardElevation="10dp"
            android:elevation="17dp"
            app:cardCornerRadius="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:elevation="17dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/drop_off_icon"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/where_to_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Where To?"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="74dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:elevation="17dp"
                    android:background="@drawable/circle_work"

                    >
                <ImageView
                    android:id="@+id/add_home"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/home"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center_horizontal"
                    />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:layout_marginLeft="33dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:typeface="monospace"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!--     <de.hdodenhof.circleimageview.CircleImageView
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:id="@android:id/icon"
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_marginStart="30dp"
                      android:layout_marginEnd="10dp"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="18dp"
                      app:civ_shadow="true"
                      app:civ_shadow_radius="10dp"
                      app:civ_shadow_color="#8BC34A"
                      android:src="@drawable/work_circle" >


                  </de.hdodenhof.circleimageview.CircleImageView> -->
                <!--     <com.mikhaellopez.circularimageview.CircularImageView
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/work_circle"
                       app:civ_border_width="4dp"
                       app:civ_shadow="true"
                       app:civ_shadow_radius="10dp"
                       app:civ_shadow_color="#8BC34A"/>-->
                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:elevation="17dp"
                    android:background="@drawable/circle_work"

                    >
                       <ImageView
                         android:id="@+id/add_work"
                         android:layout_width="27dp"
                         android:layout_height="27dp"
                         android:src="@drawable/work"
                           android:layout_marginTop="18dp"
                         android:layout_gravity="center_horizontal"
                         />
                </LinearLayout>
                     <!--                android:background="@drawable/circle_shape"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="Work"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:typeface="monospace"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:elevation="17dp"
                    android:background="@drawable/circle_work"

                    >
                <ImageView
                    android:id="@+id/add_place"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/plus_icon"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:text="Add "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:typeface="monospace"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
