<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomRelative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <fragment
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="example.com.mapexample.MapsActivity" />

        <FrameLayout
            android:id="@+id/spinner_frameHF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="@color/ShadeBlack"
            android:backgroundTintMode="src_over">

            <ProgressBar
                android:id="@+id/progressBarHF"
                style="?android:attr/progressBarStyleLarge"
                android:theme="@style/PurpleAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:background="#f3f4f8"
        android:alpha="0.8">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_Where_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:foregroundGravity="center"
            app:cardElevation="10dp"
            android:elevation="17dp"
            app:cardCornerRadius="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:elevation="17dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/marker"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/where_to_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Where to?"
                    android:textSize="18sp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/HomeLL"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:elevation="30dp"
            android:layout_above="@+id/home_tv"
            android:layout_toStartOf="@+id/WorkLL"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/circle_work">

            <ImageView
                android:id="@+id/add_home"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/home"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/WorkLL"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:elevation="30dp"
            android:layout_above="@+id/work_tv"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_work">

            <ImageView
                android:id="@+id/add_work"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/work"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AddLL"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:elevation="30dp"
            android:layout_above="@+id/add_tv"
            android:layout_toEndOf="@+id/WorkLL"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/circle_work">

            <ImageView
                android:id="@+id/add_place"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/plus_icon"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="57dp"
            android:layout_toStartOf="@+id/work_tv"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/work_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="16sp"
            android:layout_toEndOf="@id/work_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="60dp"
            android:fontFamily="sans-serif-condensed-medium"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
