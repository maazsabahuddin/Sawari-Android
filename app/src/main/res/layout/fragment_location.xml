<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Maps.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewFrom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"
                android:foregroundGravity="center"
                app:cardCornerRadius="10dp">

                <fragment
                    android:id="@+id/autocomplete_fragment_from_location"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewTo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"
                android:foregroundGravity="center"
                app:cardCornerRadius="10dp">

                <fragment
                    android:id="@+id/autocomplete_fragment_to_location"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/add_home_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/home"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:layout_weight="15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/add_home_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block-17, Gulistan-e-Jauhar, Karachi."
                    android:textAlignment="textStart"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:typeface="monospace" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/add_work_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/work"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:layout_weight="15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/add_work_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block-05, Emerald Tower, Do Talwar, Clifton, Karachi."
                    android:textAlignment="textStart"
                    android:maxLines="1"
                    android:maxLength="40"
                    android:textSize="14sp"
                    android:typeface="monospace" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/marker"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/saved_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Saved Places"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:layout_weight="15"
                android:typeface="monospace" />


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ListView
            android:id="@+id/place_name_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/spinner_frame_lf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:background="@color/ShadeBlack"
        android:backgroundTintMode="src_over">

        <ProgressBar
            android:id="@+id/progressBar_lf"
            style="?android:attr/progressBarStyleLarge"
            android:theme="@style/PurpleAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

